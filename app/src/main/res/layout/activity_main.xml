<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_learn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/btn_learning"
        app:layout_constraintBottom_toTopOf="@+id/btn_exam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_exam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="295dp"
        android:text="@string/btn_exam"
        app:layout_constraintEnd_toEndOf="@+id/btn_learn"
        app:layout_constraintStart_toStartOf="@+id/btn_learn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_repo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/btn_repo"
        app:layout_constraintEnd_toEndOf="@+id/btn_exam"
        app:layout_constraintStart_toStartOf="@+id/btn_exam"
        app:layout_constraintTop_toBottomOf="@+id/btn_exam" />

</androidx.constraintlayout.widget.ConstraintLayout>